<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/view_spacing"
    android:layout_marginBottom="@dimen/view_spacing"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/trailer_play_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/trailer_play_content_description"
        android:src="@drawable/ic_baseline_play_arrow_24px"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/play_button_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/trailer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/right_margin"
        android:layout_marginLeft="@dimen/play_button_right_spacing"
        android:layout_marginRight="@dimen/right_margin"
        android:layout_marginStart="@dimen/play_button_right_spacing"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/trailer_play_icon"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>