<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DetailActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/movie_detail_no_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/no_information_available"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/movie_poster_thumbnail"
            android:layout_width="@dimen/thumbnail_width"
            android:layout_height="@dimen/thumbnail_height"
            android:contentDescription="@string/movie_poster_thumbnail_content_description"
            android:paddingBottom="@dimen/thumbnail_padding_bottom"
            android:paddingEnd="@dimen/thumbnail_padding_right"
            android:paddingLeft="@dimen/thumbnail_padding_left"
            android:paddingRight="@dimen/thumbnail_padding_right"
            android:paddingStart="@dimen/thumbnail_padding_left"
            android:paddingTop="@dimen/thumbnail_padding_top"/>

        <TextView
            android:id="@+id/release_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/movie_poster_thumbnail"
            android:layout_toRightOf="@id/movie_poster_thumbnail"
            android:text="@string/release_date_label"
            android:textSize="@dimen/label_font_size"/>

        <TextView
            android:id="@+id/release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/release_date_label"
            android:layout_toEndOf="@id/movie_poster_thumbnail"
            android:layout_toRightOf="@id/movie_poster_thumbnail"
            android:textSize="@dimen/release_date_font_size"/>

        <TextView
            android:id="@+id/vote_average_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/release_date"
            android:layout_toEndOf="@id/movie_poster_thumbnail"
            android:layout_toRightOf="@id/movie_poster_thumbnail"
            android:text="@string/vote_average_label"
            android:textSize="@dimen/label_font_size"/>

        <TextView
            android:id="@+id/vote_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vote_average_label"
            android:layout_toEndOf="@id/movie_poster_thumbnail"
            android:layout_toRightOf="@id/movie_poster_thumbnail"
            android:textSize="@dimen/vote_average_font_size"/>

        <TextView
            android:id="@+id/overview_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_poster_thumbnail"
            android:text="@string/overview_label"
            android:textSize="@dimen/label_font_size"/>

        <TextView
            android:id="@+id/overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/overview_label"
            android:textSize="@dimen/overview_font_size"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/trailers_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/overview"
            android:layout_marginTop="@dimen/recycler_view_margin"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/reviews_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/trailers_rv"
            android:layout_marginTop="@dimen/recycler_view_margin"/>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>