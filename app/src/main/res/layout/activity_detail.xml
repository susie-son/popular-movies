<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/movie_detail_no_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_information_available"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/movie_poster_thumbnail"
            android:layout_width="@dimen/movie_thumbnail_width"
            android:layout_height="@dimen/movie_thumbnail_height"
            android:contentDescription="@string/movie_poster_thumbnail_content_description"
            android:layout_marginRight="@dimen/image_thumbnail_margin"
            android:layout_marginEnd="@dimen/image_thumbnail_margin" />

        <TextView
            android:id="@+id/release_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/movie_poster_thumbnail"
            android:layout_toEndOf="@id/movie_poster_thumbnail"
            android:textSize="@dimen/label_font_size"
            android:text="@string/release_date_label"/>

        <TextView
            android:id="@+id/release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/movie_poster_thumbnail"
            android:layout_toEndOf="@id/movie_poster_thumbnail"
            android:layout_below="@id/release_date_label"
            android:textSize="@dimen/release_date_font_size" />

        <TextView
            android:id="@+id/vote_average_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/movie_poster_thumbnail"
            android:layout_toEndOf="@id/movie_poster_thumbnail"
            android:layout_below="@id/release_date"
            android:textSize="@dimen/label_font_size"
            android:text="@string/vote_average_label"/>

        <TextView
            android:id="@+id/vote_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/movie_poster_thumbnail"
            android:layout_toEndOf="@id/movie_poster_thumbnail"
            android:layout_below="@id/vote_average_label"
            android:layout_alignBottom="@id/overview"
            android:textSize="@dimen/vote_average_font_size" />

        <TextView
            android:id="@+id/overview_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_font_size"
            android:layout_below="@id/movie_poster_thumbnail"
            android:layout_marginTop="@dimen/movie_overview_margin"
            android:text="@string/overview_label"/>

        <TextView
            android:id="@+id/overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/overview_label"
            android:textSize="@dimen/overview_font_size"/>

    </RelativeLayout>
</ScrollView>